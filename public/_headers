# Cache de arquivos versionados (com hash)
/assets/*
  Cache-Control: public, max-age=31536000, immutable

# Não cachear HTML principal
/
  Cache-Control: no-cache, no-store, must-revalidate

/index.html
  Cache-Control: no-cache, no-store, must-revalidate

# Service Worker deve sempre buscar nova versão
/sw.js
  Cache-Control: no-cache

# Não cachear version.json
/version.json
  Cache-Control: no-cache, no-store, must-revalidate
